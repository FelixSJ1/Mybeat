<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         displayDetailsOnTestsThatTriggerWarnings="true">
    
    <!-- Suítes de Teste -->
    <!--TESTANDO O CÓDIGO DOCUMENTAÇÃO-->
    <testsuites>
        <testsuite name="Unit Tests">
            <directory>tests/unit</directory>
        </testsuite>
    </testsuites>

    <!-- Configuração de PHP para os testes -->
    <php>
        <!-- Configurações de erro -->
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
        
        <!-- Desabilitar output buffering para testes -->
        <ini name="output_buffering" value="Off"/>
        
        <!-- Configurações do banco de dados de teste (opcional) -->
        <env name="DB_HOST" value="localhost"/>
        <env name="DB_USER" value="root"/>
        <env name="DB_PASS" value=""/>
        <env name="DB_NAME" value="MyBeatDB_test"/>
        <env name="DB_PORT" value="3307"/>
    </php>

    <!-- Cobertura de código (opcional, mas recomendado) -->
    <source>
        <include>
            <directory suffix=".php">app/Controllers</directory>
            <directory suffix=".php">app/Models</directory>
        </include>
        <exclude>
            <directory>vendor</directory>
            <directory>tests</directory>
        </exclude>
    </source>

    <!-- Configurações de logging (opcional) -->
    <logging>
        <!-- Gerar relatório de cobertura em HTML -->
        <!-- <log type="coverage-html" target="tests/coverage"/> -->
        
        <!-- Gerar relatório de cobertura em texto -->
        <!-- <log type="coverage-text" target="php://stdout" showOnlySummary="true"/> -->
    </logging>
</phpunit>